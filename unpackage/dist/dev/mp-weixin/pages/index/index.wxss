@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
		flex: 1;
		background-color: #f5f5f5;
		padding: 20px;
}
.form-container {
		background-color: #ffffff;
		border-radius: 8px;
		padding: 20px;
		margin-top: 60px;
}
.form-title {
		text-align: center;
		margin-bottom: 30px;
}
.form-title text {
		font-size: 24px;
		font-weight: bold;
		color: #333;
}
.form-group {
		margin-bottom: 20px;
}
.input {
		height: 44px;
		background-color: #f8f8f8;
		border-radius: 4px;
		padding: 0 15px;
		font-size: 16px;
}
.btn-submit {
		background-color: #007AFF;
		color: #ffffff;
		height: 44px;
		line-height: 44px;
		border-radius: 4px;
		font-size: 16px;
}
.form-switch {
		text-align: center;
		margin-top: 15px;
}
.switch-text {
		color: #007AFF;
		font-size: 14px;
}
